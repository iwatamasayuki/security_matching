<div class="text-center bg-info text-white">
  <h1>警備員登録フォーム</h1>
  <%= form_with model: @guard, local: true do |f| %>
    <div class="mt-5 p-2">
      <%= f.label :company, "所属会社" %><br />
      <%= f.text_field :company%>
    </div>
    <div class="p-2">
      <%= f.label :image, "本人写真" %><br />
      <%= f.file_field :image%>
    </div>
    <div class="p-2">
      <%= f.label :guard_name, "警備員名" %><br />
      <%= f.text_field :guard_name%>
    </div>
    <div class="p-2">
      <%= f.label :name_kana, "フリガナ" %><br />
      <%= f.text_field :name_kana%>
    </div>
    <div class="p-2">
      <%= f.label :gender, "性別" %><br />
      <%= f.text_field :gender%>
    </div>
    <div class="p-2">
      <%= f.label :age, "年齢" %><br />
      <%= f.text_field :age%>
    </div>
    <div class="p-2">
      <%= f.label :experience, "経験年数" %><br />
      <%= f.text_field :experience%>
    </div>
    <div class="p-2">
      <%= f.label :qualification, "保有資格" %><br />
      <%= f.text_field :qualification%>
    </div>
    <%= f.submit "登録" %>
    <div class="p-2">
    </div>
  <% end %>
</div>